<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditTextPreference
        android:key="@string/user_display_name"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/user_display_name"
        app:useSimpleSummaryProvider = "true"/>
    <EditTextPreference
        android:key="user_email_address"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="yourname@something.com"
        android:title="@string/user_email_address"
        app:useSimpleSummaryProvider = "true"/>
    <ListPreference
        android:defaultValue="false"
        android:entries="@array/social_networks"
        android:entryValues="@array/values_social_networks"
        android:key="pref_list_social_netwokrs"
        android:title="Favorite Social Network"
        app:useSimpleSummaryProvider="true" />
</PreferenceScreen>
